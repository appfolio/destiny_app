<div class="row">
  <div class="col-xs-12">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                 html: {class:"form-horizontal"}) do |f| %>
      <div class="row text-center">
        <div class="col-xs-offset-2 cols-xs-10">
          <h2>Sign in to start</h2>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, class: "col-xs-2 control-label" %>
        <div class="col-xs-10">
          <%= f.text_field :email, autofocus: true, validate: false, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "col-xs-2 control-label" %>
        <div class="col-xs-10">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-offset-2 col-xs-4">
          <% if DestinyApp::Application.config.oauth_configured %>
            <%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2),
              class: "btn btn-default" %>
          <% end %>
        </div>
        <div class="col-xs-offset-2 col-xs-4">
          <%= f.submit "Log in", class: "btn btn-default pull-right" %>
        </div>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
