<div class="row">
  <div class="col-xs-12">
    <% form_for resource_name, resource, :url => session_path(resource_name) do |f| -%>
      <p><%= f.label :identity_url %></p>
      <p><%= f.text_field :identity_url %></p>

      <% if devise_mapping.rememberable? -%>
        <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
      <% end -%>

      <p><%= f.submit "Sign in" %></p>
    <% end -%>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                 html: {class:"form-horizontal"}) do |f| %>
      <div class="row text-center">
        <div class="col-xs-offset-2 cols-xs-10">
          <h2>Sign in to start</h2>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, class: "col-xs-2 control-label" %>
        <div class="col-xs-10">
          <%= f.text_field :email, autofocus: true, validate: false, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "col-xs-2 control-label" %>
        <div class="col-xs-10">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class="col-xs-offset-2 col-xs-10">
            <div class="checkbox">
              <%= f.label :remember_me do %>
                <%= f.check_box :remember_me %> Remember me
              <% end %>
            </div>
          </div>
        </div>
      <% end -%>

      <div class="form-group">
        <div class="col-xs-offset-2 col-xs-10">
          <%= f.submit "Log in", class: "btn btn-default" %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
