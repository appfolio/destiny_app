<div class="row">
  <div class="col-xs-12 text-center">
    <h1>Welcome to the Challenges Page!</h1>
    <p class="lead">Begin, Continue, or restart the Challenge.</p>
  </div>
  <div class="col-xs-12 text-center">
      <% if current_user.tables_prefix %>
        <div class="row">
          <div class="col-xs-offset-4 col-xs-4 text-center">
            <div class="well">
              <%= button_tag "Continue", class: "btn btn-lg btn-block btn-success", onclick: "go_to_challenge()" %>
            </div>
          </div>
          <div class="col-xs-offset-4 col-xs-4 text-center">
            <div class="well">
              <%= button_tag "Restart", class: "btn btn-lg btn-block btn-danger", onclick: "submit_challenge_restart()" %>
            </div>
          </div>
        </div>
      <% else %>
        <div class="row">
          <div class="col-xs-offset-4 col-xs-4 text-center">
            <div class="well">
              <%= button_tag "Begin", class: "btn btn-lg btn-block btn-primary", onclick: "submit_challenge_setup()" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="modal fade" id="responseModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="responseModalTitle"></h4>
      </div>
      <div class="modal-body">
        <p id="responseModalBody"></p>
      </div>
      <div class="modal-footer">
        <button type="button" id="responseModalContinue" class="btn btn-default"
          data-dismiss="modal" onclick="go_to_challenge()">Continue</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
