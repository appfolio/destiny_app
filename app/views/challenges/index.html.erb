<div class="row">
  <div class="col-xs-12 text-center">
    <h1>Welcome to the Challenges Page!</h1>
    <p class="lead">Begin, Continue, or restart the Challenge.</p>
  </div>
  <div class="col-xs-12 text-center">
    <% if current_user.tables_prefix %>
      <p><button class="btn btn-success" onclick="">Continue</button></p>
      <p><button class="btn btn-danger" onclick="submit_challenge_restart(<%= current_user.id %>)">Restart</button></p>
    <% else %>
      <button class="btn btn-primary" onclick="submit_challenge_setup(<%= current_user.id %>)">Begin</button>
    <% end %>
  </div>
</div>
